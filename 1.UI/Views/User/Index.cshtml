@*All users Screen*@

@model IEnumerable<_4.Entities.Users>


<h2>ניהול משתמשים</h2>

<div class="form-group">
    <label style="color:azure;">בחר משתמשים להצגה</label>

    <select id="usersList"  style="color:aqua">
        <option selected="selected">הצג רק משתמשים פעילים</option>
        <option>הצג את כל המשתמשים הרשומים</option>
    </select>
</div>



<div id="container" class="container">

    <p>
        @Html.ActionLink("יצירת משתמש חדש", "Registration", "Login")
    </p>


    <div>

        <table class="table">
            <tr>
                <th>
                    @Html.Label("מספר משתמש")
                </th>
                <th>
                    @Html.Label("שם משתמש")
                </th>
                <th>
                    @Html.Label("מייל משתמש")
                </th>
                <th>
                    @Html.Label("סיסמת כניסה")
                </th>
                <th>
                    @Html.Label("דרגת משתמש")
                </th>
                <th>
                    @Html.Label("משתמש פעיל")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NickName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles.roleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActiv)
                </td>
                <td>
                    @Html.ActionLink("עריכת פרטי משתמש", "EditUser", new { id = item.UserID })
                </td>
            </tr>
            }

        </table>

    </div>
</div>



@section scripts{

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Coode/Users_Manager_script.js"></script>

}

